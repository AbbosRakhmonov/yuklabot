# Telegram Bot Token
BOT_TOKEN=your_bot_token_here

# MongoDB Connection String
MONGODB_URI=mongodb://localhost:27017/yuklabot

# Node Environment
NODE_ENV=development

# Bot Name
BOT_NAME=YuklaBot

# Log Level (error, warn, info, verbose, debug, silly)
LOG_LEVEL=debug

# Timezone (e.g., America/New_York, Europe/London, Asia/Tokyo, UTC)
TZ=UTC

# Webhook Configuration
WEBHOOK_ENABLED=false
WEBHOOK_URL=https://yourdomain.com
WEBHOOK_PATH=/webhook/your_bot_token_prefix
PORT=3000

# Telegram Local Bot API Configuration
# Set to true to use local Bot API, or provide custom API URL
TELEGRAM_LOCAL_MODE=false
TELEGRAM_API_URL=https://api.telegram.org

# YT-DLP Path
YTDLP_PATH=yt-dlp
# GALLERY-DL Path
GALLERY_DL_PATH=gallery-dl
# FFMPEG Path
FFMPEG_PATH=ffmpeg

# txt file
INSTAGRAM_COOKIES_PATH=
TIKTOK_PROXY=socks5://5.255.117.127:1080
